-- Pattern 5:

declare @var1 varchar(20), @intgr int, @i int;
set @var1 = 'SOMASREE'
set @intgr =0
set @i = len(@var1)

while (@intgr<@i)
begin
	set @intgr +=1
	print  substring(@var1,@intgr,1)
end
;

S
O
M
A
S
R
E
E

-- Pattern 6:
declare @var1 varchar(20), @intgr int, @i int;
set @var1 = 'SOMASREE'
set @intgr =0
set @i = len(@var1)

while (@i>0)
begin
	print  substring(@var1,@i,1)
	set @i -=1
end
;
